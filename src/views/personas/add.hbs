<div class="container p-4">
    <div class="row"> 
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Crear Nueva Persona</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Michael Eduardo" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Apellido</label>
                            <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Perez Rodriguez"  required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Edad</label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="0"  required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="type_person" class="input-group-text">Tipo de persona</label>
                            <select class="form-select" name="tipo_persona" aria-label="Default select example" required>
                                <option selected>Seleccione tipo de persona</option>
                                {{#if tipos}}
                                    {{#each tipos}}
                                    <option value="{{idTp}}" >{{nombre}}</option>
                                    {{/each}}
                                {{else}}
                                <option >No existen roles en la tabla...</option>
                                {{/if}}
                            </select>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>